<Window x:Class="OverlayPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="OverlayPlayer" 
        Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Icon="logo.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <!-- Video Oynatıcı (Source kod tarafında atanacak) -->
        <MediaElement Name="MainVideo" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop" 
                      Stretch="Uniform"
                      MediaEnded="MainVideo_MediaEnded"
                      Visibility="Visible"
                      RenderTransformOrigin="0.5,0.5">
            <MediaElement.RenderTransform>
                <RotateTransform x:Name="VideoRotation" Angle="0" />
            </MediaElement.RenderTransform>
        </MediaElement>

        <!-- GIF Oynatıcı (Source kod tarafında atanacak) -->
        <Image Name="MainGif"
               Stretch="Uniform"
               Visibility="Collapsed"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="GifRotation" Angle="0" />
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
