<Window x:Class="OverlayPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="OverlayPlayer" 
        Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Icon="logo.png">
    <Grid>
        <!-- Video Oynatıcı (Source kod tarafında atanacak) -->
        <MediaElement Name="MainVideo" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Stop" 
                      Stretch="Uniform"
                      MediaEnded="MainVideo_MediaEnded"
                      Visibility="Visible"/>

        <!-- GIF Oynatıcı (Source kod tarafında atanacak) -->
        <Image Name="MainGif"
               Stretch="Uniform"
               Visibility="Collapsed"/>
    </Grid>
</Window>
